<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:toolkit="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone.Controls.Toolkit"
    xmlns:local="using:StepAlarm.Resources">

    <SolidColorBrush x:Key="BackgroundColor">
        <SolidColorBrush.Color>#D2D2D2</SolidColorBrush.Color>
    </SolidColorBrush>

    <SolidColorBrush x:Key="HeaderBackgroundColor">
        <SolidColorBrush.Color>#4B0082</SolidColorBrush.Color>
    </SolidColorBrush>

    <Style x:Name="HeaderTextBlockStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="30"/>
        <Setter Property="FontWeight" Value="Normal"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="FontFamily" Value="Seoge WP" />
    </Style>
    <Style x:Name="TitleTextPrimaryLarge" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="Seoge WP" />
        <Setter Property="FontSize" Value="25" />
        <Setter Property="FontWeight" Value="Normal" />
        <Setter Property="Foreground" Value="Black" />
    </Style>
    <Style x:Name="TitleTextPrimary" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="Seoge WP" />
        <Setter Property="FontSize" Value="25" />
        <Setter Property="FontWeight" Value="Normal" />
        <Setter Property="Foreground" Value="Black" />
    </Style>

</ResourceDictionary>
